[sub_resource type="GDScript" id=17]
script/source = "extends KinematicBody

const WALK_SPEED = 200
var velocity = Vector2()
var boids_agent : BoidsExternalAgent2D

#func _draw():
#    draw_arc(Vector2(0,0), 64.0, -PI, PI, 40, Color(1.0,1.0,1.0,0.2), 2.0)

func _process(delta):
    boids_agent.world_position = Vector2(transform.origin.x, transform.origin.z)
    $Sprite.velocity = velocity
    #$Arrow.rotation = atan2(velocity.y, velocity.x)
    
func _physics_process(delta):
    var mouse = get_viewport().get_mouse_position()
    var camera = get_viewport().get_camera()
    var mouse_3d = camera.project_position(mouse, abs(camera.transform.origin.z))
    velocity = mouse_3d - transform.origin
    if(velocity.length() > WALK_SPEED):
        velocity = velocity.normalized() * WALK_SPEED 

    move_and_slide(velocity, Vector3(0, 1, 0))
    velocity.y = 0
    transform.origin.y = 0.0
"

